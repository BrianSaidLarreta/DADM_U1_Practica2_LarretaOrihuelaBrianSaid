<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Main4Activity">

    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/ic1"
        android:id="@+id/chrome"
        android:layout_marginTop="20dp"
            />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/chrome"
            android:text="Chrome"
            android:textSize="20dp"
            />
    <ImageView
        android:src="@drawable/ic2"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_toRightOf="@id/chrome"
        android:id="@+id/firefox"
        android:layout_marginTop="20dp"
        />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/chrome"
            android:layout_below="@id/firefox"
            android:text="Firefox"
            android:textSize="20dp"
            />
    <ImageView android:src="@drawable/ic3"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_below="@id/chrome"
        android:id="@+id/radioactivo"
        android:layout_marginTop="70dp"
        />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/radioactivo"
            android:text="Radioactivo"
            android:textSize="20dp"
            />

    <ImageView android:src="@drawable/ic4"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_toRightOf="@id/radioactivo"
        android:layout_below="@id/firefox"
        android:id="@+id/serpiente"
        android:layout_marginTop="70dp"
        />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/radioactivo"
            android:layout_below="@id/serpiente"
            android:text="Serpiente"
            android:textSize="20dp"
            />


</RelativeLayout>